<h3>historique des commandes</h3>

<div class=" mt-2 px-2">
        <div class="card">
            {{!-- <h5 class="mx-auto mt-4">Les Commandes Terminées</h5> --}}
            <div class="card-body">
                <div class="mb-2 d-flex justify-content-between align-items-center">
                </div>
                <div class="table-responsive">
                    <table sorted responsive class="table table-striped-columns table-bordered align-middle ">

                        <thead>
                            <tr class="bg-light">
                                <th scope="col" width="5%"><input class="form-check-input" type="checkbox"></th>
                                <th scope="col" width="10%">Canal de Vente</th>
                                <th scope="col" width="20%">Numero de suivi</th>
                                <th scope="col" width="20%">Contenu produit</th>
                                <th scope="col" width="20%">Prix total</th>
                                <th scope="col" width="20%">Telephone client</th>
                                <th scope="col" width="20%">Date creation</th>
                                <th scope="col" width="20%">Date Livraison</th>
                                <th scope="col" width="20%">Status commande</th>
                                <th scope="col" width="20%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each Commandes}}
                                <tr>
                                    <th scope="row"><input class="form-check-input" type="checkbox"></th>
                                    <td>{{"Magasin.name"}}</td>
                                    <td>{{numero_commande}}</td>
                                    <td>{{#list_article articles_commandes}}
                                    {{/list_article}}</td>
                                    <td><b>XAF</b> {{total}} <br><b> frais de livraison et embalage<b><br>
                                    
                                            {{#calculate frais_livraison 1 "plus"}}
                                    
                                            {{/calculate}}
                                        </b></td>
                                    <td>{{numero_client}}</td>
                                    <td>{{#dateFormat createdAt "LLL"}}
                                    {{/dateFormat}}</td>
                                    <td>{{#dateFormat date_livraison "LLL"}}
                                    {{/dateFormat}}</td>
                                    <td><span class="badge bg-success">{{status}}</span></td>
                                    <td>{{#if delievred}}
                                        <span class="badge bg-success">Commande livrée</span>
                                        {{else}}
                                        <span class="badge bg-danger">Commande {{status}}</span>
                                    {{/if}}</td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>

                </div>

            </div>
        </div>
    </div>
